<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theFirstLine"
        android:orientation="horizontal">
        <!-- 我的收支-->
        <TextView
            android:background="@drawable/blue_background"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--            个人中心-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:id="@+id/ll_personal_center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_portrait"
                    android:background="@drawable/ic_portrait"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/tv_user_phone_num"
                        android:textColor="@color/primary_font">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理账号,家庭信息等">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/primary_font"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
            </View>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.beta.autobookkeeping.fragment.Settings.TargetCostWaterFragment"
                android:id="@+id/fragment_target_cost_water">
            </fragment>
<!--            银行号码设置-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/primary_font"
                android:layout_marginTop="10dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:foreground="?selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加银行短信号码可精准识别账单"
                    android:textColor="@color/primary_font"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:layout_marginLeft="5dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:id="@+id/btn_add_bank_number"
                        app:qmui_backgroundColor="@color/blue"
                        android:textColor="@color/white"
                        app:qmui_radius="10dp"
                        android:text="添加号码">
                    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton>
                </LinearLayout>
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:foreground="?selectableItemBackground"
                android:id="@+id/gl_bank_num">
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/primary_font"
                android:layout_marginTop="10dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?selectableItemBackground"
                android:id="@+id/ll_search_orders"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_search_orders">

                </ImageView>
                <TextView
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="查找我的账单"
                    android:textColor="@color/primary_font"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/primary_font"
                android:layout_marginTop="10dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?selectableItemBackground"
                android:id="@+id/ll_order_map"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_order_map">

                </ImageView>
                <TextView
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="查看账单地图"
                    android:textColor="@color/primary_font"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
